# Ghostty Configuration
# Documentation: https://ghostty.org/docs

# Font Configuration
font-family = "JetBrains Mono"
font-size = 12
font-thicken = true

# Window Configuration
window-padding-x = 10
window-padding-y = 10
window-decoration = true
window-theme = auto
background-opacity = 0.95
background-blur-radius = 20

# Theme
theme = catppuccin-mocha

# Shell
shell-integration = detect
shell-integration-features = cursor,sudo,title

# Cursor
cursor-style = block
cursor-style-blink = true

# Mouse
mouse-hide-while-typing = true
clipboard-read = allow
clipboard-write = allow

# Keybindings (import from separate file)
config-file = keybindings.conf

# Default window size (can be resized with Windows keyboard shortcuts)
window-width = 140   # columns (characters wide)
window-height = 40   # rows (lines tall)

# Miscellaneous
quit-after-last-window-closed = true
